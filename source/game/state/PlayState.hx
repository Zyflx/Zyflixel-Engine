						UI.updateAcc(0, true);
					}

					daNote.active = false;
					daNote.visible = false;

					daNote.kill();
					notes.remove(daNote, true);
					daNote.destroy();
				}
			});
		}

		for (i in scriptArray) i.callFunction('updatePost', [elapsed]);

